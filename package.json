{
  "name": "moyu-search",
  "displayName": "Moyu search",
  "version": "0.0.4",
  "packageManager": "pnpm@10.10.0",
  "description": "A better tab search",
  "author": "moyum",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.7.1",
    "@plasmohq/storage": "^1.15.0",
    "ahooks": "^3.8.4",
    "antd": "^5.26.6",
    "clsx": "^2.1.1",
    "debounce-promise": "^3.1.2",
    "fuse.js": "^7.1.0",
    "pinyin": "^4.0.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hotkeys-hook": "^5.1.0",
    "tailwindcss": "3.4.1",
    "ts-key-enum": "^3.0.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "history",
      "bookmarks"
    ]
  }
}
